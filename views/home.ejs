        /* border-radius: 10%; */
        /* box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5); */
        /* margin-bottom: 20px; */
        margin: 18px;
        padding: 10px;
        /* backface-visibility: hidden; */
      }

      .image-section h2,
      .image-section p {
        color: #ffffff;
        margin-top: -20px;
      }

      .image-section p {
        color: #ffffff;
        margin-top: 10px;
        font-size: 16px;
      }

      .lead {
        font-size: 24px;
        margin-top: 186px;
      }

      .btn-container {
        margin-top: 15px;
      }
    </style>
  </head>
  <body>
    <div class="jumbotron">
      <div class="container">
