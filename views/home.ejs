    <style>
      body {
        /* background-color: #f8f9fa; */
        background-color: #7093b6;
        font-family: "Arial", sans-serif;
      }

      .display-heading {
        text-align: center;
      }

      .jumbotron {
        background-color: #7093b6;
        color: #ffffff;
        padding: 80px 0;
        text-align: center;
      }

      .jumbotron i {
        animation: rotate 4s infinite linear;
      }

      @keyframes rotate {
        0% {
          transform: rotate(0deg);
        }
        100% {
          transform: rotate(360deg);
        }
      }

      .container {
        position: relative;
      }

      .image-section {
        position: absolute;
        top: 20px;
        left: 50%;
        transform: translateX(-50%);
        text-align: center;
      }

      /* .logo-drone {
        animation: rotate 2s infinite linear;
      } */

      .image-section img {
        /* max-width: 100%; */
