        <hr />
        <div class="btn-container d-flex justify-content-center">
          <a class="btn btn-light btn-lg mr-3" href="/register" role="button"
            >Register</a
          >
          <a class="btn btn-light btn-lg mr-3" href="/login" role="button"
            >Login</a
          >
        </div>
      </div>
    </div>
